10 REM             WORDLE GAME IN APPLESOFT BASIC
20 DIM W$(5),G$(5),S$(5)
30 DIM WL$(10)
40 WL$(1) = "APPLE"
50 WL$(2) = "BERRY"
60 WL$(3) = "DUCKS"
70 WL$(4) = "DATES"
80 WL$(5) = "GRAPE"
90 WL$(6) = "LEMON"
100 WL$(7) = "MANGO"
110 WL$(8) = "PEACH"
120 WL$(9) = "PLUMS"
130 WL$(10) = "QUINCE"
140 REM             RANDOMIZE
150 S$ = WL$( INT ( RND (1) * 10) + 1)
160 PRINT "WELCOME TO WORDLE!"
170 PRINT "GUESS THE 5-LETTER WORD."
180 FOR T = 1 TO 6
190 PRINT "TURN ";T;": ";
200 INPUT G$
210 IF  LEN (G$) <  > 5 THEN  PRINT "WORD MUST BE 5 LETTERS!"
  : GOTO 190
220 FOR I = 1 TO 5
230 IF  MID$ (G$,I,1) =  MID$ (S$,I,1) THEN  PRINT  MID$ (G$,I,1);" ";
240 IF  MID$ (G$,I,1) <  >  MID$ (S$,I,1) THEN  GOSUB 400
250 NEXT I
320 PRINT 
352 PRINT "LEGEND: * = RIGHT LETTER, WRONG PLACE; _ = WRONG LETTER
330 IF G$ = S$ THEN  PRINT "CONGRATULATIONS! YOU GUESSED THE WORD!"
  : END 
340 NEXT T
350 PRINT "SORRY, YOU DIDN'T GUESS THE WORD. THE WORD WAS ";S$
360 END 
400 REM             WRONG LETTER
410 FD = 0
420 FOR J = 1 TO 5
430 IF  MID$ (G$,I,1) =  MID$ (S$,J,1) THEN FD = 1
440 NEXT J
450 IF FD = 1 THEN  PRINT "* ";
455 IF FD = 0 THEN  PRINT "_ ";
460 RETURN 
